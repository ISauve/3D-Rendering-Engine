#version 330 core

in vec3 vPosition;
in vec2 vTexture;
in vec3 vNormal;

out vec2 TexCoords;
out vec3 Normal;
out vec3 WorldCoords;

uniform mat4 Model;
uniform mat4 MVP;

void main() {
    gl_Position = MVP * vec4(vPosition, 1.0);

    TexCoords = vTexture;
    Normal = vec3(mat3(transpose(inverse(Model))) * vNormal);  // this is necessary if you do non-uniform scaling
    WorldCoords = vec3(Model * vec4(vPosition, 1.0));
}
