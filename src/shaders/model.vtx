#version 330 core

layout (location = 0) in vec3 vPosition;
layout (location = 1) in vec3 vNormal;
layout (location = 2) in vec2 vTexture;

uniform mat4 MVP;

out vec3 Normal;
out vec2 TexCoords2D;

void main() {
    gl_Position = MVP * vec4(vPosition, 1.0);

    Normal = vNormal;
    TexCoords2D = vTexture;
}
