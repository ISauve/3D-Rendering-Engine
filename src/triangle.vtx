// Specify which version of OpenGL Shading Language (GLSL) we want to use
#version 330 core

// Allocate shader variables which form the "shader plumbing"
// Input variables
in vec2 vPosition;
in vec4 vColor;

// Output variables
out vec4 color;

// Uniform variables (don't change pre vtx/frag - they're across geometric primitives)
uniform mat4 ModelViewProjectionMatrix;

void main()
{
    color = vColor;
    gl_Position = vec4(vPosition, 0.0, 1.0);
}